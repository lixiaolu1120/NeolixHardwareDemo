<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".DemoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/open_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开扫描头"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭扫描头"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始扫描"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cancel_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止扫描"
            android:textColor="#000000"
            android:textSize="20dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/open_RFID_reader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开读卡器"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button

            android:id="@+id/close_RFID_reader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭读卡器"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/RFID_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始读卡"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/RFID_read_stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="停止读卡"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/open_lock_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开锁控"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close_lock_control"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭锁控"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/set_box_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入锁地址"
                android:numeric="integer"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/set_lock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="设置锁号"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/door_number_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入门号"
                android:numeric="integer"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/open_lock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开锁"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/open_all_lock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开全部锁"
            android:textColor="#000000" />

        <Button
            android:id="@+id/get_all_box_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询所有锁状态"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/box_status_door_number_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="请输入门号"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/get_locker_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="读取锁状态"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/get_drop_box_locker_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="读取投递箱状态"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/locker_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="锁状态详情" />

        <Button
            android:id="@+id/locker_content_without_response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="锁状态（无反馈）" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/init_IR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开红外"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close_IR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭红外"
            android:textColor="#000000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:editable="false"
                android:text="99"
                android:textColor="#000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/det_IR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="检测红外"
                android:textColor="#000000"
                android:textSize="20dp" />
        </LinearLayout>

        <Button
            android:id="@+id/read_IR_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="读取红外次数" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/open_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开Camera"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/open_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开打印机"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/close_printer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭打印机"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打印"
            android:textColor="#000000"
            android:textSize="20dp" />

        <Button
            android:id="@+id/paper_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查纸"
            android:textColor="#000000"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/open_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开LED" />

        <Button
            android:id="@+id/close_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭LED" />

        <Button
            android:id="@+id/open_scanner_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开扫描头LED" />

        <Button
            android:id="@+id/close_scanner_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭扫描头LED" />

        <Button
            android:id="@+id/open_print_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开打印机LED" />

        <Button
            android:id="@+id/close_print_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭打印机LED" />

        <Button
            android:id="@+id/open_RFID_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="打开RFID LED" />

        <Button
            android:id="@+id/close_RFID_led"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="关闭RFID LED" />


    </LinearLayout>
</ScrollView>